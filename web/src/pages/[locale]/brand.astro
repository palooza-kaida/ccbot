---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BrandPage from "../../components/BrandPage.astro";
import { ts, SUPPORTED_LOCALES, DEFAULT_LOCALE, type Locale } from "../../i18n";

export function getStaticPaths() {
  return SUPPORTED_LOCALES
    .filter((l) => l !== DEFAULT_LOCALE)
    .map((locale) => ({ params: { locale }, props: { locale } }));
}

const locale = (Astro.props.locale ?? DEFAULT_LOCALE) as Locale;
---

<BaseLayout locale={locale} title={ts(locale, "brandTitle")} description={ts(locale, "brandMetaDesc")} currentPath="/brand">
  <main>
    <BrandPage locale={locale} />
  </main>
</BaseLayout>
