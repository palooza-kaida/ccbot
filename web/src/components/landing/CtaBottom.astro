---
import { ts, type Locale } from "../../i18n";
import { icons } from "../../assets/icons";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<section class="cta-bottom mt-8 reveal">
  <h2 class="cta-bottom__heading">{ts(locale, "ctaTitle")}</h2>
  <p>{ts(locale, "ctaSub")}</p>
  <div class="cta-bottom__badges">
    <img src="https://img.shields.io/github/stars/kaida-palooza/ccpoke?style=flat&logo=github&label=stars&color=D97757" alt="GitHub Stars" loading="lazy" />
    <img src="https://img.shields.io/npm/dw/ccpoke?style=flat&logo=npm&label=downloads&color=D97757" alt="npm weekly downloads" loading="lazy" />
    <img src="https://img.shields.io/github/license/kaida-palooza/ccpoke?style=flat&color=D97757" alt="License" loading="lazy" />
  </div>
  <div class="cta-actions">
    <a href="https://github.com/kaida-palooza/ccpoke" target="_blank" rel="noopener" class="cta-gh">
      <span class="w-4 h-4 inline-flex" set:html={icons.github16} />
      <span>{ts(locale, "ctaGithub")}</span>
    </a>
    <a href="#setup" class="cta-secondary">
      <span>{ts(locale, "ctaGetStarted")}</span>
      <svg viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 12l4-4-4-4"/></svg>
    </a>
  </div>
</section>
